<section id="module-content" class="clearfix">


  <div class="page-top">
    <div class="container">
      <h5 class="page-title">Create Account</h5>
    </div>
  </div>
  <div id="content" class="container">
    <div class="row">
      <div class="central">
        <div id="col-main" class="clearfix">
          <div id="customer-register">
            <h4 class="page-title">Create Account</h4>
            <%= form_for @customer do |f| %>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.label :firstname, "Firstname" %>
                  <%= f.text_field :firstname %>
                </div>
              </div>

               <div class="row">
                <div class="input-field col s12">
                <%= f.label :lastname, "Lastname" %>
                <%= f.text_field :lastname %>
                </div>
              </div>

               <div class="row">
                <div class="input-field col s12">
                  <%= f.label :email, "Email" %>
                  <%= f.email_field :email %>
                </div>
              </div>

               <div class="row">
                <div class="input-field col s12">
                  <%= f.label :password, "Password" %>
                  <%= f.password_field :password %>
                </div>
              </div>

              <div class="control-group">
                <%= f.submit "CREATE ACCOUNT", class: "btn btn-1 ripple" %>
              </div>

              <div class="login-account">
                <%= link_to "Already have an account? Click here", login_path  %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
