
<% if flash['notice'] %>
  <%= javascript_tag do %>
      Materialize.toast("<%= flash['notice'] %>", 2000)
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col s12 m6 l3 product-column">
        <%= link_to product_path(product) do %>
          <div class="card">
            <div class="card-image"><%= image_tag product.image_url %></div>
          </div>
          <div class="card-content center">
            <span><%= product.name %></span><br /><span class="price">$<%= product.price %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
